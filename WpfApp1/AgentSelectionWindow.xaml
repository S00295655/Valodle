<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="WpfApp1.AgentSelectionWindow"
    Title="Guess the Agent" Height="750" Width="1100"
    WindowStartupLocation="CenterScreen"
    Background="#0F1923"
    ResizeMode="CanResize"
    MinWidth="800" MinHeight="500">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ═══ HEADER ═══ -->
        <Grid Grid.Row="0" Background="#111D27" Height="90">
            <StackPanel VerticalAlignment="Center" Margin="30,0">
                <TextBlock Text="VALORANT — Guess the Agent"
                           FontSize="26" FontWeight="Bold"
                           Foreground="White" FontFamily="Arial"/>
                <TextBlock Text="Select an agent and confirm your guess"
                           FontSize="13" Foreground="#8B9EAA"
                           Margin="0,4,0,0"/>
            </StackPanel>
            <Rectangle VerticalAlignment="Bottom" Height="3" Fill="#FF4655"/>
        </Grid>

        <!-- ═══ CONTENT ═══ -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LISTBOX  -->
            <Border Grid.Column="0" Background="#111D27"
                    BorderBrush="#FF4655" BorderThickness="0,0,2,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="AGENTS"
                               Foreground="#FF4655"
                               FontWeight="Bold"
                               FontSize="13"
                               Margin="12,12,12,6"
                               FontFamily="Arial"/>

                    <ListBox x:Name="AgentListBox"
                             Grid.Row="1"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="White"
                             Margin="6"
                             SelectionChanged="ListBox_SelectionChanged">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Padding" Value="4"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1C2A35"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#2A3F50"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="4">
                                    <Border Width="36" Height="36"
                                            CornerRadius="18"
                                            ClipToBounds="True"
                                            Margin="0,0,10,0">
                                        <Image Source="{Binding ImagePath}"
                                               Stretch="UniformToFill"/>
                                    </Border>
                                    <TextBlock Text="{Binding Name}"
                                               VerticalAlignment="Center"
                                               Foreground="White"
                                               FontSize="13"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- game -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- attempts -->
                <TextBlock x:Name="AttemptText"
                           Grid.Row="0"
                           Text="0 attempt(s)"
                           Foreground="#8B9EAA"
                           FontSize="13"
                           Margin="16,12,16,4"/>

                <!-- Grid -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              Margin="16,4,16,16">
                    <StackPanel x:Name="GuessPanel"/>
                </ScrollViewer>
            </Grid>
        </Grid>

        <!-- ═══ FOOTER ═══ -->
        <Border Grid.Row="2" Background="#111D27" Height="70"
                BorderThickness="0,3,0,0" BorderBrush="#FF4655">
            <Grid Margin="30,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="SelectedAgentText"
                               Text="No agent chosen"
                               FontSize="16" Foreground="#8B9EAA"
                               VerticalAlignment="Center" FontStyle="Italic"/>
                </StackPanel>
                <Button x:Name="ConfirmButton"
                        Content="CONFIRM  ▶"
                        HorizontalAlignment="Right" VerticalAlignment="Center"
                        Width="160" Height="42"
                        FontSize="14" FontWeight="Bold" FontFamily="Arial"
                        Foreground="White" BorderThickness="0"
                        Cursor="Hand" IsEnabled="False"
                        Click="ConfirmButton_Click">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#FF4655"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#3A3A3A"/>
                                    <Setter Property="Foreground" Value="#666666"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#D93A47"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>