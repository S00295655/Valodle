<Window x:Class="WpfApp1.AgentSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choix de l'agent" Height="750" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#0F1923"
        ResizeMode="CanResize"
        MinWidth="800" MinHeight="500">

    <Window.Resources>

        <!-- Style carte agent -->
        <Style x:Key="AgentCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#1C2A35"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="Height" Value="170"/>
        </Style>

        <!-- Style bouton invisible pour overlay cliquable -->
        <Style x:Key="AgentButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Grid Grid.Row="0" Background="#111D27" Height="90">
            <StackPanel VerticalAlignment="Center" Margin="30,0">
                <TextBlock Text="Guess the agent"
                           FontSize="26" FontWeight="Bold"
                           Foreground="White" FontFamily="Arial"/>
                <TextBlock Text="..."
                           FontSize="13" Foreground="#8B9EAA" Margin="0,4,0,0"/>
            </StackPanel>
            <!-- Ligne rouge Valorant -->
            <Rectangle VerticalAlignment="Bottom" Height="3" Fill="#FF4655" HorizontalAlignment="Stretch"/>
        </Grid>

        <!-- FILTRES PAR RÔLE -->
        <StackPanel Grid.Row="0" Orientation="Horizontal"
                    HorizontalAlignment="Right" VerticalAlignment="Center"
                    Margin="0,0,30,0"/>

        <!-- GRILLE DES AGENTS -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="10,10,10,10">
            <ItemsControl x:Name="AgentsGrid">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Style="{StaticResource AgentButtonStyle}"
                                Click="AgentCard_Click"
                                Tag="{Binding Name}">
                            <Border Style="{StaticResource AgentCardStyle}"
                                    x:Name="CardBorder">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" BlurRadius="10"
                                                      ShadowDepth="3" Opacity="0.4"/>
                                </Border.Effect>
                                <Border.Triggers>
                                    <EventTrigger RoutedEvent="Border.MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetProperty="Background.Color"
                                                                To="#2A3F52" Duration="0:0:0.15"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="Border.MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetProperty="Background.Color"
                                                                To="#1C2A35" Duration="0:0:0.15"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Border.Triggers>

                                <Grid>
                                    <!-- Barre colorée en haut selon le rôle -->
                                    <Rectangle Height="4" VerticalAlignment="Top"
                                               RadiusX="8" RadiusY="8"
                                               Fill="{Binding RoleColor}"/>

                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                                Margin="10">
                                        <!-- Icône / Emoji agent -->
                                        <TextBlock Text="{Binding Emoji}"
                                                   FontSize="40"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,8,0,6"/>

                                        <!-- Nom de l'agent -->
                                        <TextBlock Text="{Binding Name}"
                                                   FontSize="14" FontWeight="Bold"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   FontFamily="Arial"/>

                                        <!-- Badge rôle -->
                                        <Border Background="{Binding RoleBackground}"
                                                CornerRadius="4" Margin="0,5,0,0"
                                                Padding="6,2" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding Role}"
                                                       FontSize="10" FontWeight="Bold"
                                                       Foreground="{Binding RoleColor}"
                                                       HorizontalAlignment="Center"/>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- FOOTER : agent sélectionné -->
        <Border Grid.Row="2" Background="#111D27" Height="70" BorderThickness="0,3,0,0"
                BorderBrush="#FF4655">
            <Grid Margin="30,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="SelectedAgentText"
                               Text="No agent chosen"
                               FontSize="16" Foreground="#8B9EAA"
                               VerticalAlignment="Center" FontStyle="Italic"/>
                </StackPanel>
                <Button x:Name="ConfirmButton"
                        Content="CONFIRM  ▶"
                        HorizontalAlignment="Right" VerticalAlignment="Center"
                        Width="160" Height="42"
                        FontSize="14" FontWeight="Bold" FontFamily="Arial"
                        Background="#FF4655" Foreground="White"
                        BorderThickness="0" Cursor="Hand"
                        IsEnabled="False"
                        Click="ConfirmButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FF4655"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#3A3A3A"/>
                                    <Setter Property="Foreground" Value="#666666"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#D93A47"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

    </Grid>
</Window>
